<!DOCTYPE html>
<html lang="en">


    <%- include("./includes/head.ejs")  %>

<body>
    <%- include("./includes/header.ejs") %> 
      
    <main>
        <figure class ="banner">
            <img src="/assets/banner-recortado.jpg" alt="banner" width="100%"> 
        </figure> 
        <nav class="main-nav-contenedor">
            <% if (categorias && categorias.length > 0) { %>
                <% categorias.forEach(element => { %>
                    <a href="/products/categorias" >
                        <article>
                            <img class="foto-categorias" src="<%= element.image %> " alt="Imagen de categoria" >
                            <h3 class="nombre-categoria" ><%= element.name %></h3>
                            <p><%= element.description %> </p>
                        </article>
                    </a>
                <% }) %>
            <% } %>
        </nav >                     
    </main>
    <%- include("./includes/footer.ejs") %> 
    
    
</body>
</html>