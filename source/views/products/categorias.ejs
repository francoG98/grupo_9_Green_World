<!DOCTYPE html>
<html lang="en">


    <%- include("../includes/head.ejs")  %>

<body>
    <%- include("../includes/header.ejs") %> 
      
    <main>
        <figure class ="banner">
            <h1><%= title %></h1>
            <img src="/assets/banner-recortado.jpg" alt="banner" width="100%"> 
        </figure> 
        <section class="productos">
            <% if (products && products.length > 0) { %>
                <% products.forEach(element => { %>
                    <article>                    
                        <a href="/products/detail/<%= element.id %>" ><img class="foto-producto" src="/assets/products-images/<%= element.image.path %>" alt="Imagen de producto" width="100%"></a>                        
                        <nav class="datos-chart">
                            <a class="nombre-producto" href="/products/detail/<%= element.id %> " ><h3><%= element.name %></h3></a>
                            <p>$<%= element.price %></p>
                            <% if (user && !user.admin) { %>
                                <a href="" class="confirmar-compra"><h2>Agregar al Carrito</h2></a>
                            <% } %>
                        </nav>
                    </article>
                 
                <% }) %>
            <% } %>
            
        </section >              
    </main>

    <%- include("../includes/footer.ejs") %> 
       
</body>
</html>